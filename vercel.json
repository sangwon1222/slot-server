{
  "version": 2,
  "builds": [
    {
      "src": "app.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "public/client/index.html"
    },
    {
      "src": "/(.+)",
      "dest": "public/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "app.ts"
    }
  ]
}
